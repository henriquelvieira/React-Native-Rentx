{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
  "experimentalDecorators": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@assets/*": ["./src/assets/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@theme/*": ["./src/global/styles/*"],
      "@global/*": ["./src/global/*"],
      "@utils/*": ["./src/utils/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
      "@dtos/*": ["./src/dtos/*"],
      "@database/*": ["./src/database/*"],
    }      
  },
  "extends": "expo/tsconfig.base"
}
